{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard",
        "plugin:json/recommended-with-comments"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "json"
    ],
    "rules": {
        "array-element-newline": [
            "error",
            "never"
            // { "multiline": true }
        ],
        "json/*": [
            "error",
            "allowComments"
        ]
    }
}