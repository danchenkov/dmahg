{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "google",
        "plugin:json/recommended-with-comments"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "json"
    ],
    "rules": {
        "json/*": [
            "error",
            "allowComments"
        ],
        "array-element-newline": [
            "error",
            "never"
            // { "multiline": true }
        ],
        "indent": [
            "error",
            4
        ],
        "semi": [
            "error",
            "never"
        ]
    }
}