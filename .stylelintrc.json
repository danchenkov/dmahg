{
	"extends": "stylelint-config-standard",
	"rules": {
	  "at-rule-no-unknown": [
		true,
		{
		  "ignoreAtRules": ["extends", "include", "use"]
		}
	  ],
	  "block-no-empty": null,
	  "indentation": 4,
	  "unit-allowed-list": ["%", "ch", "ddpx", "deg", "fr", "em", "ms", "px", "rem", "s", "vw"]
	}
  }